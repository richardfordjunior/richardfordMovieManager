<%- include layouts/header.ejs %>
       <script>
         function addMovie(){
          window.location.href = '/add';
         }
         function cancelAdd(){
          window.location.href = '/';
         }
       </script>
       <script>
       $(document).ready(function() {
        $('#movieTable').DataTable();
        $('.dataTables_wrapper').find('label').each(function() {
          $(this).parent().append($(this).children());
        });
        $('.dataTables_filter').find('input').each(function() {
          $('input').attr("placeholder", "Search");
          $('input').removeClass('form-control-sm');
        });
        $('.dataTables_length').addClass('d-flex flex-row');
        $('.dataTables_filter').addClass('md-form');
        $('select').addClass('mdb-select');
        $('.mdb-select').material_select();
        $('.mdb-select').removeClass('form-control form-control-sm');
        $('.dataTables_filter').find('label').remove();
      });
      </script>
        <div class="page-data">
         <div class="data-btn">
           <button onClick="addMovie();">+ Add Movie</button>
         </div>
         <br>
     
         <div class="data-table">
            <table id="movieTable" class="table table-striped table-bordered table-responsive-md" border="1" cellpadding="7" cellspacing="7">
             <thead>
                <tr>
                    <th>Title</th>
                    <th>Format</th>
                    <th>Length</th>
                    <th>Year Released</th>
                    <th>Rating</th>
                    <th>Last Updated</th>
                    <th width="120px">Action</th>
                </tr>
             </thead>
                               
                <% if(data.length){ 
                                
                 for(var i = 0;i < data.length;i++) { %>
                 
                <tr>
                    <td><%=data[i].title%></td>
                    <td><%=data[i].format%></td>
                    <td><%=data[i].length%></td>
                    <td><%=data[i].release_year%></td>
                    <td><%=data[i].rating%></td>
                    <td><%=data[i].lastUpdatedDate%></td>
                    <td>
                        <a class="a-inside edit" href="/edit/<%=data[i].title%>">Edit</a>
                       
                        <a class="a-inside delete" href="/delete/<%=data[i].title%>">Delete</a>
                       
                    </td>
                </tr>
            <% }
            
             }else{ %>
                 <tr>
                    <td colspan="3">No Movies found.</td>
                 </tr>
            <% } %>
                
                              
                
            </table>
          
         </div>
     
        </div>
        
<%- include layouts/footer.ejs %>